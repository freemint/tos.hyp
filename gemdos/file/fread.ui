!ignore_index
(!begin_liste) [Assembler:]
!item [C:]
int32_t Fread ( int16_t handle, int32_t count, void *buf );
!item [Assembler:]
!begin_verbatim
pea       buf           ; Offset 8
move.l    count,-(sp)   ; Offset 4
move.w    handle,-(sp)  ; Offset 2
move.w    #63,-(sp)     ; Offset 0
trap      #1            ; GEMDOS
lea       $C(sp),sp     ; correct stack
!end_verbatim

!item [GFA-Basic]
