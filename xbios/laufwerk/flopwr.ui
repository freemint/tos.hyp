                int16_t trackno, int16_t sideno, int16_t count );
!item [Assembler:]
!begin_verbatim
move.w    count,-(sp)    ; Offset 18
move.w    sideno,-(sp)   ; Offset 16
move.w    trackno,-(sp)  ; Offset 14
move.w    sectno,-(sp)   ; Offset 12
