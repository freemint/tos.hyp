(!ende_liste)


!begin_node Bindings for read_config_byte
!ignore_index
(!begin_liste) [Assembler:]
!item [C:]
 #include <tos.h>

int32_t fast_read_config_byte (int32_t handle, uint8_t reg, uint8_t *adresse);
!item [Assembler:]
!begin_verbatim
pea       adresse,-(sp) ; Offset 8
move.b    reg,-(sp)     ; Offset 6
move.l    handle,-(sp)  ; Offset 2
move.w    #302,-(sp)    ; Offset 0
trap      #14           ; Call XBIOS
addq.l    #11,sp        ; Correct stack
!end_verbatim
(!ende_liste)
!end_node
!end_node


