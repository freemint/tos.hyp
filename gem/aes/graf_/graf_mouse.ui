!item [C:]
int16_t graf_mouse ( int16_t gr_monumber, MFORM *gr_mofaddr );

!item [Binding:]
!begin_verbatim
int16_t graf_mouse (int16_t gr_monumber, MFORM *gr_mofaddr)
{
   int_in[0]  = gr_monumber;
   addr_in[0] = gr_mofaddr;

   return ( crys_if(78) );
}
!end_verbatim

