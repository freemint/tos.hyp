!item [Binding:]
!begin_verbatim
int16_t edit_get_color ( OBJECT *tree, int16_t obj, 
                          int16_t *tcolor, int16_t  *bcolor )
{
   int_in[0]  = obj;
   int_in[1]  = 2;      /* Sub-opcode for function */

   addr_in[0] = tree;

   crys_if( 216 );

   *tcolor = int_out[1];
   *bcolor = int_out[2];
   
   return ( int_out[0] );
}
!end_verbatim
