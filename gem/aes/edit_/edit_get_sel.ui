control+6 !! control[3] !! 1     # entry in addr_in
control+8 !! control[4] !! 2     # entry in addr_out
int_in    !! int_in[0]  !! obj
int_in+2  !! int_in[1]  !! 8
addr_in   !! addr_in[0] !! tree
addr_out  !! addr_out[0]  !! bsel
addr_out+4 !! addr_out[1] !! esel
