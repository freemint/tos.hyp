!begin_verbatim
void edit_set_color ( OBJECT *tree, int16_t obj,
                       int16_t tcolor, int16_t bcolor )
{
   int_in[0]  = obj;
   int_in[1]  = 2;      /* Sub-opcode for function */
   int_in[2]  = tcolor;
   int_in[3]  = bcolor;

   addr_in[0] = tree;

   crys_if( 217 );

   return;
}
