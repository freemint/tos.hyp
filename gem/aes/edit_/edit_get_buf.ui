!item [Binding:]
!begin_verbatim
int16_t edit_get_buf ( OBJECT *tree, int16_t obj,
                       int8_t **buf,
                       int32_t *buflen, int32_t *txtlen )
{
   int_in[0]  = obj;
   int_in[1]  = 0;      /* Sub-opcode for function */

   addr_in[0] = tree;

   crys_if( 216 );

   *buflen = int_out[1..2];
   *txtlen = int_out[3..4];
   
   *buf = addr_out[0];
   
   return ( int_out[0] );
}
!end_verbatim
