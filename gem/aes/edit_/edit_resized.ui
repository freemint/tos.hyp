!item [Binding:]
!begin_verbatim
int16_t edit_resized ( OBJECT *tree, int16_t obj,
                       int16_t *oldrh, int16_t *newrh )
{
   int_in[0]  = obj;
   int_in[1]  = 6;      /* Subcode fr Funktion */

   addr_in[0] = tree;

   crys_if( 217 );
   
   *oldrh = int_out[1];
   *newrh = int_out[2];

   return ( int_out [0] );
}
!end_verbatim
