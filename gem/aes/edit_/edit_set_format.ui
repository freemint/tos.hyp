!item [Binding:]
!begin_verbatim
void edit_set_format ( OBJECT *tree, int16_t obj,
                       int16_t tabwidth, int16_t autowrap )
{
   int_in[0]  = obj;
   int_in[1]  = 1;      /* Sub-opcode for function */
   int_in[2]  = tabwidth;
   int_in[3]  = autowrap;

   addr_in[0] = tree;

   crys_if( 217 );

   return;
}
