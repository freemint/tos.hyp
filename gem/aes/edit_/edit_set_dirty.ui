!item [Binding:]
!begin_verbatim
void edit_set_dirty ( OBJECT *tree, int16_t obj,
                      int16_t dirty )
{
   int_in[0]  = obj;
   int_in[1]  = 7;      /* Subopcode for function */
   int_in[2]  = dirty;

   addr_in[0] = tree;

   crys_if( 217 );

   return;
}
