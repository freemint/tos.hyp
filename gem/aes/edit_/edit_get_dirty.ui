!item [Binding:]
!begin_verbatim
int16_t edit_get_dirty ( OBJECT *tree, int16_t obj )
{
   int_in[0]  = obj;
   int_in[1]  = 7;      /* Sub-opcode for function */

   addr_in[0] = tree;

   crys_if( 216 );

