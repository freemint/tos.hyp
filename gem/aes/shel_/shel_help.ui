(!ende_liste)



!begin_node Bindings for shel_help
!ignore_index

(!begin_liste) [GEM-Arrays]

!item [C:]
int16_t shel_help ( int16_t sh_hmode, int8_t *sh_hfile, int8_t *sh_hkey);


!item [Binding:]
!begin_verbatim
int16_t shel_help ( int16_t sh_hmode, int8_t *sh_hfile,
                    int8_t *sh_hkey)
{
   int_in[0] = sh_hmode;
   addr_in[0] = sh_hfile;
   addr_in[1] = sh_hkey;

   crys_if(128);

   return = int_out[0];
}
!end_verbatim

