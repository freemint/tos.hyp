                  GRECT *clip, int16_t whandle );

!item [Binding:]
!begin_verbatim
void objc_wdraw (OBJECT *ob_drtree, int16_t ob_drstart,
                 int16_t ob_drdepth, GRECT *clip,
                 int16_t whandle)
{
   int_in[0]  = ob_drstart;
   int_in[1]  = ob_drdepth;
   int_in[2]  = whandle;

   addr_in[0] = ob_drtree;
   addr_in[1] = clip;

   crys_if(60);
}
!end_verbatim

