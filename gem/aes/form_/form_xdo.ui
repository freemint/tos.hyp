!item [Binding:]
!begin_verbatim
int16_t form_xdo (OBJECT *tree, int16_t startob, int16_t *lastcrsr,
                  XDO_INF *tabs, void *flydial)
{
   int_in[0]  = startob;
   addr_in[0] = tree;
   addr_in[1] = tabs;
   addr_in[2] = flydial;

   crys_if (50);

   *lastcrsr = int_out[1];
   return ( int_out[0] );
}
!end_verbatim

