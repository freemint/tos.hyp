void lbox_set_bsldr ( LIST_BOX *box, int16_t first, GRECT *rect )
{
   addr_in[0] = box;
   addr_in[1] = rect;

   int_in[0] = 5;
   int_in[1] = first;
   crys_if (175);
}
!end_verbatim

