!item [C:]
int16_t appl_read ( int16_t ap_rid, int16_t ap_rlength, void *ap_rpbuff );
!item [Binding:]
!begin_verbatim
int16_t appl_read (int16_t ap_rid, int16_t ap_rlength,
                   void *ap_rpbuff)
{
   int_in[0]  = ap_rid;
   int_in[1]  = ap_rlength;
   addr_in[0] = ap_rpbuff;

   return ( crys_if(11) );  
} 
!end_verbatim
