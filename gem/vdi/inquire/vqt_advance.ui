!item [Binding:]
!begin_verbatim
void vqt_advance ( int16_t handle, int16_t ch,
                   int16_t *x_advance, int16_t *y_advance,
                   int16_t *remx, int16_t *remy );
{
   intin[0] = ch;

   contrl[0] = 247;
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[6] = handle;

   vdi ();

   x_advance = ptsout[0];
   y_advance = ptsout[1];
   remx      = ptsout[2];
   remy      = ptsout[3];
}
!end_verbatim

