!item [C:]
DRV_INFO *v_create_driver_info( int16_t handle, int16_t driver_id );

!item [Binding:]
!begin_verbatim
DRV_INFO *v_create_driver_info( int16_t handle, int16_t driver_id )
{
  int16_t save_conf;
  
  intin[0] = driver_id;

  contrl[0] = 180;
  contrl[1] = 0;
  contrl[3] = 1;
  contrl[5] = 0;
  contrl[6] = handle;

  contrl[2] = 0;
  contrl[4] = 0;

  save_conf = disable_nvdi_errors();
  vdi ();
  enable_nvdi_errors( save_conf );

  if ( contrl[4] >= 2 )
    return(*(DRV_INFO **) &intout[0] );

  return( 0L );
}
!end_verbatim

