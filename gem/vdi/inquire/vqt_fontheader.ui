(!begin_liste) [GEM-Arrays]

!item [C:]
void vqt_fontheader ( int16_t handle, int8_t *buffer, int8_t *tdf_name );

!item [Binding:]
!begin_verbatim
void vqt_fontheader (int16_t handle, int8_t *buffer,
                     int8_t *tdf_name)
{
   intin[0..1] = buffer;

   contrl[0] = 232;
   contrl[1] = 0;
   contrl[3] = 2;
   contrl[6] = handle;

   vdi ();

   tdf_name[0..n-1] = intout[0..n-1];
}
!end_verbatim

