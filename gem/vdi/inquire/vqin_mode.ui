contrl+6  !! contrl[3] !! 1     # Entry in intin
contrl+8  !! contrl[4] !! 1     # Entry in intout
contrl+12 !! contrl[6] !! handle
intin     !! intin[0]  !! dev_type
intout    !! intout[0] !! input_mode
!end_table

(!ende_liste)
