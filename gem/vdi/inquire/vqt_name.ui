contrl+6  !! contrl[3]     !! 1     # Entry in intin
contrl+8  !! contrl[4]     !! 33    # Entry in intout
contrl+12 !! contrl[6]     !! handle
intin     !! intin[0]      !! element_num
intout    !! intout[0]     !! Return Value
intout+2  !! intout[1..32] !! name[0..31]
!end_table

(!ende_liste)
!end_node

