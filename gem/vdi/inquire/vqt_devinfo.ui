void vqt_devinfo ( int16_t handle, int16_t device, int16_t *devexits,
                   int8_t *devname )
{
   intin[0] = device;

   contrl[0] = 248;
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[6] = handle;

   vdi ();

   *devexits = ptsout[0];
   p = contrl[4];
   dev_name[0..p-1]    = intout[0..p-1];
}
