!item [Binding:]
!begin_verbatim
int16_t v_write_default_settings( int16_t handle, PRN_SETTINGS *settings )
{
  int16_t save_conf;

  *(PRN_SETTINGS **) &intin[0] = settings;

  contrl[0] = 182;
  contrl[1] = 0;
  contrl[3] = 2;
  contrl[5] = 1;                              /* Subfucntion 1 */
  contrl[6] = handle;

  contrl[2] = 0;
  contrl[4] = 0;

  save_conf = disable_nvdi_errors();
  vdi ();
  enable_nvdi_errors( save_conf );

  if ( contrl[4] >= 1 )
    return( intout[0] );

  return( 0 );
}
!end_verbatim

