int32_t vqf_bg_color( int16_t handle, COLOR_ENTRY *bg_color )
{
   contrl[0] = 203;
   contrl[1] = 0;
   contrl[3] = 0;
   contrl[5] = 1;
   contrl[6] = handle;

   vdi ();

   bg_color = intout [2..5];
