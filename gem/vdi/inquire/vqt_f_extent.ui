(!begin_liste) [GEM-Arrays]

!item [C:]
void vqt_f_extent ( int16_t handle, int8_t *string, int16_t *extent );

!item [Binding:]
!begin_verbatim
void vqt_f_extent (int16_t handle, int8_t *string,
                   int16_t *extent)
{
   intin[0..n-1] = string[0..n-1];

   contrl[0] = 240;
   contrl[1] = 0;
   contrl[3] = n;
   contrl[6] = handle;

   vdi ();

   extent[0..7] = ptsout[0..7];
}
!end_verbatim

