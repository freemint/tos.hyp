contrl+6  !! contrl[3]     !! n     # entry in intin
contrl+8  !! contrl[4]     !! 0     # entry in intout
contrl+12 !! contrl[6]     !! handle
intin     !! intin[0..n-1] !! string[0..n-1]
ptsout    !! ptsout[0..7]  !! extent[0..7]
!end_table

(!ende_liste)
!end_node

