!item [Binding:]
!begin_verbatim
void vqt_advance32 (int16_t handle, int16_t ch,
                   fix31 *x_advance, fix31 *y_advance)
{
   intin[0] = ch;

   contrl[0] = 247;
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[6] = handle;

   vdi ();

   *x_advance = ptsout[4..5];
   *y_advance = ptsout[6..7];
}
!end_verbatim

