!item [C:]
void vqt_extent ( int16_t handle, int8_t *string, int16_t *extent );

!item [Binding:]
!begin_verbatim
void vqt_extent (int16_t handle, int8_t *string,
                 int16_t *extent)
{
   int16_t *tmp;

   tmp = intin;
   while (*tmp++ = *string++)
      ;

   contrl[0] = 116;
   contrl[1] = 0;
   contrl[3] = (int16_t) ((tmp-intin)-1);
   contrl[6] = handle;

   vdi ();

   extent[0..7] = ptsout[0..7];
}
!end_verbatim

