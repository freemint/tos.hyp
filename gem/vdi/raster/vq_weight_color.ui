!item [Binding:]
!begin_verbatim
int32_t vq_weight_color( int16_t handle,
                         COLOR_ENTRY *weight_color )
{
   contrl[0] = 209;
   contrl[1] = 0;
   contrl[3] = 0;
   contrl[5] = 3;
   contrl[6] = handle;

   vdi ();
   
   weight_color = intout[2..5];
   return ( intout[0..1] );
}
!end_verbatim

