!item [Binding:]
!begin_verbatim
void v_etext( int16_t handle, int16_t x, int16_t y,
              int16_t *string, int16_t *offsets)
{
   ptsin[0]  = x;
   ptsin[1]  = y;
   ptsin[2]  = offsets[0];
   ptsin[3]  = offsets[2];
   .
   .
   ptsin[2n+1]  = offsets[2n-1];
   
   i = 0;
   while (intin[i++] = *string++)
      ;

   contrl[0] = 11;
   contrl[1] = length og string + 1 ;
   contrl[3] = lenght of string;
   contrl[4] = 11;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

