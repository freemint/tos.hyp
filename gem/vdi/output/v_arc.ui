void v_arc (int16_t handle, int16_t x, int16_t y, int16_t radius,
            int16_t begang, int16_t endang)
{
   ptsin[0] = x;
   ptsin[1] = y;
   ptsin[2] = ptsin[3] = ptsin[4] = ptsin[5] = 0;
   ptsin[6] = radius;
   ptsin[7] = 0;

   intin[0] = begang;
   intin[1] = endgang;

   contrl[0] = 11;
   contrl[1] = 4;
   contrl[3] = 2;
   contrl[5] = 2;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

