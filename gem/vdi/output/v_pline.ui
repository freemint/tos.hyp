(!begin_liste) [GEM-Arrays]

!item [C:]
void v_pline ( int16_t handle, int16_t count, int16_t *pxyarray );

!item [Binding:]
!begin_verbatim
void v_pline (int16_t handle, int16_t count, int16_t *pxyarray)
{
   ptsin[0..2*count-1] = pxyarray[0..2*count-1];

   contrl[0] = 6;
   contrl[1] = count;
   contrl[3] = 0;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

!item [GEM-Arrays:]
!begin_table [l l l]
Address !! Element !! Contents
!hline
contrl    !! contrl[0]      !! 6     # Function Opcode
