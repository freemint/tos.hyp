!item [Binding:]
!begin_verbatim
void vq_pixcol (int16_t handle, int16_t x, int16_t y, int16_t *phys_ix, int16_t *vdi_ix)
{
   ptsin[0] = x;
   ptsin[1] = y;

   contrl[0] = 58;
   contrl[1] = 1;
   contrl[3] = 0;
   contrl[6] = handle;

   vdi ();

   *phys_ix = intout[0];
   *vdi_ix  = intout[1];
}
