!item [C:]
int32_t v_color2nearest( int16_t handle, int32_t color_space,
                       COLOR_ENTRY *color, COLOR_ENTRY *nearest_color );
!item [Binding:]
!begin_verbatim
int32_t v_color2nearest( int16_t handle, int32_t color_space,
                         COLOR_ENTRY *color,
                         COLOR_ENTRY *nearest_color )
{
   intin[0..1] = color_space; 
   intin[2..5] = color; 

   contrl[0] = 204;
   contrl[1] = 0;
   contrl[3] = 6;
   contrl[5] = 2;
   contrl[6] = handle;

   vdi ();

   nearest_color = intout[2..5]; 

   return ( (int32_t) intout[0] );
}
!end_verbatim

