int16_t v_ctab_vdi2idx( int16_t handle, int16_t vdi_index )
{
   intin[0] = vdi_index; 

   contrl[0] = 206
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[5] = 4;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
