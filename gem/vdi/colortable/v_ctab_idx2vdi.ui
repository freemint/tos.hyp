!item [Binding:]
!begin_verbatim
int16_t v_ctab_idx2vdi( int16_t handle, int16_t index )
{
   intin[0] = index; 

   contrl[0] = 206
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[5] = 3;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
