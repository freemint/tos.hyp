(!begin_liste) [GEM-Arrays]

!item [C:]
int32_t v_value2color( int16_t handle, uint32_t value, COLOR_ENTRY *color );

!item [Binding:]
!begin_verbatim
int32_t v_value2color( int16_t handle, uint32_t value,
                       COLOR_ENTRY *color )
{
   intin[0..1] = value; 

   contrl[0] = 204;
   contrl[1] = 0;
   contrl[3] = 2;
   contrl[5] = 1;
   contrl[6] = handle;

   vdi ();

   color = intout[2..5]; 

   return ( (int32_t) intout[0] );
}
!end_verbatim

