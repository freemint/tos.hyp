!item [Binding:]
!begin_verbatim
COLOR_TAB *v_create_ctab( int16_t handle, int32_t color_space, 
                          uint32_t px_format )
{
   intin[0..1] = color_space; 
   intin[2..3] = px_format; 

   contrl[0] = 206;
   contrl[1] = 0;
   contrl[3] = 4;
   contrl[5] = 8;
   contrl[6] = handle;

   vdi ();

   return ( (uint32_t) intout[0] );
}
!end_verbatim

