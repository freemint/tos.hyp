!item [Binding:]
!begin_verbatim
uint32_t v_ctab_idx2value( int16_t handle, int16_t index )
{
   intin[0] = index; 

   contrl[0] = 206
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[5] = 5;
   contrl[6] = handle;

   vdi ();

   return ( (uint32_t) intout[0] );
}
