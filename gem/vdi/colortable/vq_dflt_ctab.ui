!item [C:]
int16_t vq_dflt_ctab( int16_t handle, int32_t ctab_length, COLOR_TAB *ctab );

!item [Binding:]
!begin_verbatim
int16_t vq_dflt_ctab( int16_t handle, int32_t ctab_length,
                      COLOR_TAB *ctab )
{
   intin[0..1] = ctab_length;
   
   intout zeigt auf ctab
   
   contrl[0] = 206;
   contrl[1] = 0;
   contrl[3] = 2;
   contrl[5] = 7;
   contrl[6] = handle;

   vdi ();

   if ( contrl[4] )
     return( 1 );                   /* alles in Ordnung */
   else
     return( 0 );
}
!end_verbatim

