!begin_node Bindings for vt_alignment
!ignore_index

(!begin_liste) [GEM-Arrays]

!item [C:]
void vt_alignment ( int16_t handle, int16_t dx, int16_t dy );

!item [Binding:]
!begin_verbatim
void vt_alignment (int16_t handle, int16_t dx, int16_t dy)
{
   intin[0] = dx;
   intin[1] = dy;

   contrl[0] = 5;
   contrl[1] = 0;
   contrl[3] = 2;
   contrl[5] = 85;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

