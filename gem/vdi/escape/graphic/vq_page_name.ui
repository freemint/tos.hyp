(!begin_liste) [GEM-Arrays]

!item [C:]
int16_t vq_page_name ( int16_t handle, int16_t page_id, int8_t *page_name,
                    int32_t *page_width, int32_t *page_height )

!item [Binding:]
!begin_verbatim
int16_t vq_page_name ( int16_t handle, int16_t page_id, int8_t *page_name,
                    int32_t *page_width, int32_t *page_height )
{
   intin[0] = page_id;
   intin[1..2] = page_name;

   contrl[0] = 5;
   contrl[1] = 0;
   contrl[3] = 3;
   contrl[5] = 38;
   contrl[6] = handle;

   vdi ();

   *page_width  = intout[1..2];
   *page_height = intout[3..4];

   return ( intout[0] );
}
!end_verbatim

