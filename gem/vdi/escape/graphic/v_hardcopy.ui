!item [C:]
void v_hardcopy ( int16_t handle );

!item [Binding:]
!begin_verbatim
void v_hardcopy (int16_t handle)
{
   contrl[0] = 5;
   contrl[1] = 0;
   contrl[3] = 0;
   contrl[5] = 17;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

