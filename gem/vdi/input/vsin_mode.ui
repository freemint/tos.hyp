(!begin_liste) [GEM-Arrays]

!item [C:]
int16_t vsin_mode ( int16_t handle, int16_t dev_type, int16_t mode );

!item [Binding:]
!begin_verbatim
int16_t vsin_mode (int16_t handle, int16_t dev_type, int16_t mode)
{
   intin[0] = dev_type;
   intin[1] = mode;

   contrl[0] = 33;
   contrl[1] = 2;
   contrl[3] = 2;
   contrl[6] = handle;

   vdi ();

   /* Vorsicht: Nicht alle Bindings liefern einen
      Return Value !!! */

   return ( intout[0] );
}
!end_verbatim

