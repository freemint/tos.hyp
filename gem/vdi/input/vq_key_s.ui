contrl+6  !! contrl[3] !! 0     # entry in intin
contrl+8  !! contrl[4] !! 1     # entry in intout
contrl+12 !! contrl[6] !! handle
intout    !! intout[0] !! pstatus
!end_table

(!ende_liste)
!end_node

