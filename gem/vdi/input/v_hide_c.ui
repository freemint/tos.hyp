!item [C:]
void v_hide_c ( int16_t handle );

!item [Binding:]
!begin_verbatim
void v_hide_c (int16_t handle)
{
   contrl[0] = 123;
   contrl[1] = 0;
   contrl[3] = 0;
   contrl[6] = handle;

   vdi ();
}
