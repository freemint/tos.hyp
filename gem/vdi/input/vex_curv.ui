!item [C:]
void vex_curv ( int16_t handle, int16_t (*pusrcode)(), int16_t (**psavcode)() );

!item [Binding:]
!begin_verbatim
void vex_curv (int16_t handle, int16_t (*pusrcode)(),
               int16_t (**psavcode)())
{
   contrl[0] = 127;
   contrl[1] = 0;
   contrl[3] = 0;
   contrl[6] = handle;
   contrl[7..8] = pusrcode;

   vdi ();

   *psavcode = contrl[9..10];
}
!end_verbatim

