!iflang [english]

!begin_node vst_track_offset

(!begin_liste) [Availability]

!item [Name:]
Set track kerning offset® - Set offset for track kerning.

!item [Opcode:]
237 (Opcode 255)

!item [Syntax:]
void vst_track_offset ( int16_t handle, fix31 offset, int16_t pairmode,
                        int16_t *tracks, int16_t *pairs );

!item [Description:]
The call vst_track_offset allows the setting of a user-defined value for
(!link [track kerning][Track kerning]). The following apply:
               
!begin_xlist !short [Paramewter]
!item [Parameter]
Meaning
!item [~]
~
!item [handle]
Workstation identifier
!item [offset]
Offset
!item [pairmode]
Pair kerning:
!begin_xlist !short
!item [0 =]
Disable
!item [1 =]
Enable
!end_xlist
!item [tracks]
Track kerning mode
!item [pairs]
Number of kerning pairs
!end_xlist

!item [(!nolink [Return]) value:]
The function does not return a result.

!item [Availability:]
NVDI 3.00 onwards.

!item [Group:]
Text attributes

!item [See also:]
(!link [Binding] [Bindings for vst_track_offset]) ~ vqt_pairkern ~ vqt_trackkern ~ vst_kern

(!ende_liste)
!end_node



!begin_node Bindings for vst_track_offset
!ignore_index

(!begin_liste) [GEM-Arrays]

!item [C:]
void vst_track_offset ( int16_t handle, fix31 offset, int16_t pairmode,
                        int16_t *tracks, int16_t *pairs );

!item [Binding:]
!begin_verbatim
void vst_track_offset (int16_t handle, fix31 offset,
                       int16_t pairmode, int16_t *tracks,
                       int16_t *pairs)
{
   intin[0] = 255;
   intin[1] = pairmode;
   intin[2..3] = offset;

   contrl[0] = 237;
   contrl[1] = 0;
   contrl[3] = 4;
   contrl[6] = handle;

   vdi ();

   *tracks = intout[0];
   *pairs  = intout[1];
}
!end_verbatim

