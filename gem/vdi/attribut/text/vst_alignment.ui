!item [Binding:]
!begin_verbatim
void vst_alignment (int16_t handle, int16_t hor_in,
                    int16_t vert_in, int16_t *hor_out,
                    int16_t *vert_out)
{
   intin[0] = hor_in;
   intin[1] = vert_in;

   contrl[0] = 39;
   contrl[1] = 0;
   contrl[3] = 2;
   contrl[6] = handle;

   vdi ();

   *hor_out  = intout[0];
   *vert_out = intout[1];
}
!end_verbatim

