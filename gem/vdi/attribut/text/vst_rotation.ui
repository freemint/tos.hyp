!item [C:]
int16_t vst_rotation ( int16_t handle, int16_t angle );

!item [Binding:]
!begin_verbatim
int16_t vst_rotation (int16_t handle, int16_t angle)
{
   intin[0] = angle;

   contrl[0] = 13;
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
!end_verbatim

