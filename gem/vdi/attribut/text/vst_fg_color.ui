!begin_node Bindings for vst_fg_color
!ignore_index

(!begin_liste) [GEM-Arrays]

!item [C:]
int16_t vst_fg_color ( int16_t handle, int32_t color_space, COLOR_ENTRY *fg_color );

!item [Binding:]
!begin_verbatim
int16_t vst_fg_color( int16_t handle, int32_t color_space,
                      COLOR_ENTRY *fg_color )
{
   intin[0..1] = color_space;
   intin[2..5] = fg_color;

   contrl[0] = 200;
   contrl[1] = 0;
   contrl[3] = 6;
   contrl[5] = 0;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
!end_verbatim

