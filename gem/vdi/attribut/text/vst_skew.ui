(!begin_liste) [GEM-Arrays]

!item [C:]
int16_t vst_skew ( int16_t handle, int16_t skew );

!item [Binding:]
!begin_verbatim
int16_t vst_skew (int16_t handle, int16_t skew)
{
   intin[0] = skew;

   contrl[0] = 253;
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
!end_verbatim

