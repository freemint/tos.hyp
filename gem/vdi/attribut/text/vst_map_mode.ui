contrl+6  !! contrl[3] !! 2     # entry in intin
contrl+8  !! contrl[4] !! 1     # entry in intout
contrl+12 !! contrl[6] !! handle
intin     !! intin[0]  !! mode
intin+2   !! intin[1]  !! 1
intout    !! intout[0] !! Return Value
!end_table

(!ende_liste)
!end_node

