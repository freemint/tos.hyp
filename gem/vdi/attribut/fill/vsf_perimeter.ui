!item [C:]
int16_t vsf_perimeter ( int16_t handle, int16_t per_vis );

!item [Binding:]
!begin_verbatim
int16_t vsf_perimeter (int16_t handle, int16_t per_vis)
{
   intin[0] = per_vis;

   contrl[0] = 104;
   contrl[1] = 0;
   contrl[3] = 1;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
!end_verbatim

