!item [C:]
void v_setrgb( int16_t handle, int16_t type, int16_t r, int16_t g, int16_t b );

!item [Binding:]
!begin_verbatim
void v_setrgb( int16_t handle, int16_t type, int16_t r,
               int16_t g, int16_t b )
{
   intin[0] = r;
   intin[1] = g;
   intin[2] = b;

   contrl[0] = 138;
   contrl[1] = 0;
   contrl[3] = 3;
   contrl[5] = type;
   contrl[6] = handle;

   vdi ();
}
!end_verbatim

