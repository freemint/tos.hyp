                            int16_t font_free );

!item [Binding:]
!begin_verbatim
int16_t vst_ex_load_fonts ( int16_t handle, int16_t select,
                            int16_t font_max,
                            int16_t font_free )
{
   intin[0] = select;
   intin[1] = font_max;
   intin[2] = font_free;

   contrl[0] = 119;
   contrl[1] = 0;
   contrl[3] = 3;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
!end_verbatim

