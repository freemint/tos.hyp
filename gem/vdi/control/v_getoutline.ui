!item [Binding:]
!begin_verbatim
void v_getoutline (int16_t handle, int16_t ch, int16_t *xyarray,
                   int8_t *bezarray, int16_t maxpts,
                   int16_t *count)
{
   intin[0] = ch;
   intin[1] = maxpts;
   intin[2..3] = xyarray;
   intin[4..5] = bezarray;

   contrl[0] = 243;
   contrl[1] = 0;
   contrl[3] = 6;
   contrl[6] = handle;

   vdi ();

   *count = intout[0];
}
!end_verbatim

