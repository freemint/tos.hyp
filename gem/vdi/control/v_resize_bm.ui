!item [Binding:]
!begin_verbatim
int16_t v_resize_bm( int16_t handle, int16_t width,
                     int16_t height, int32_t int8_t_width,
                     uint16_t *addr )
{
   intin[0] = width;
   intin[1] = height;
   intin[2..3] = byte_width;
   intin[4..5] = addr;

   contrl[0] = 100;
   contrl[1] = 0;
   contrl[3] = 6;
   contrl[5] = 2;
   contrl[6] = handle;

   vdi ();

   return ( intout[0] );
}
!end_verbatim

